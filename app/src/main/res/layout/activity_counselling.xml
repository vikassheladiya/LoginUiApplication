<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CounsellingActivity">
    <ImageView
        android:layout_width="@dimen/_315sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:src="@drawable/vounselling"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="Counselling from"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:text="experts"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:text="Taik to our experts and counsellors to"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:text="get your queries cleared."
        android:textSize="@dimen/_10sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/background3" />

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/background3" />
        <View
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/background" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextbtn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_130sdp"
            android:background="@drawable/background"
            android:text="sign up"
            android:textColor="#FFFFFF">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>




</LinearLayout>